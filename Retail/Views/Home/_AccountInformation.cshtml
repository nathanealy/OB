@model IEnumerable<Retail.Models.AccountInformation>

<div class="row">
    <div class="col-2">
        @Html.DisplayNameFor(model => model.AccountNumber)
    </div>
    <div class="col-4">
        @Html.DisplayNameFor(model => model.Nickname)
    </div>
    <div class="col-3">
        @Html.DisplayNameFor(model => model.AccountBalance)
    </div>
    <div class="col-3">
        @Html.DisplayNameFor(model => model.AvailableBalance)
    </div>
</div>

@{ 
     foreach (var item in Model) {
        <div class="row">
            <div class="col-2">            
                    @Html.DisplayFor(modelItem => item.AccountNumber)            
            </div>
            <div class="col-4">
                    <input type="text" value="@Html.DisplayFor(modelItem => item.Nickname)" /> <input type="button" value="Update"/>
            </div>
            <div class="col-3">
                    $@Html.DisplayFor(modelItem => item.AccountBalance)
            </div>
            <div class="col-3">
                    $@Html.DisplayFor(modelItem => item.AvailableBalance)
            </div>    
        </div>
    }   
}
