@model IEnumerable<Retail.Models.AccountInformation>

<div class="row">
    <div class="col-2">
        @Html.DisplayNameFor(model => model.AccountNumber)
    </div>
    <div class="col-4">
        @Html.DisplayNameFor(model => model.Nickname)
    </div>
    <div class="col-3">
        @Html.DisplayNameFor(model => model.AccountBalance)
    </div>
    <div class="col-3">
        @Html.DisplayNameFor(model => model.AvailableBalance)
    </div>
</div>

@{
    var i = 0;

    foreach (var item in Model) {
        <div class="row">
            <div class="col-2">            
                    @Html.DisplayFor(modelItem => item.AccountNumber)            
            </div>
            <div class="col-4">
                <input type="text" id="nickname-@i" value="@Html.DisplayFor(modelItem => item.Nickname)" placeholder="Nickname" /> <input type="button" id="update-@i" value="Update" />
            </div>
            <div class="col-3">
                    $@Html.DisplayFor(modelItem => item.AccountBalance)
            </div>
            <div class="col-3">
                    $@Html.DisplayFor(modelItem => item.AvailableBalance)
            </div>    
        </div>

        i++;
    }   
}
